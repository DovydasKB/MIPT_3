<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="@string/_0"
        android:textSize="36sp"
        android:textColor="#000000"
        android:background="#FFFFFF" />

    <GridLayout
        android:id="@+id/memoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_result"
        android:columnCount="5"
        android:alignmentMode="alignMargins"
        android:paddingBottom="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mc"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="MC"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mr"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="MR"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_ms"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="MS"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mplus"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="M+"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mminus"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="M-"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>
    </GridLayout>
    <GridLayout
        android:id="@+id/gridLayout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/memoryLayout"
        android:columnCount="5"
        android:alignmentMode="alignMargins"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_back"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="←"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_ce"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="CE"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_c"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="C"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus_minus"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="±"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sqrt"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="√"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_seven"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_eight"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_nine"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="÷"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_percent"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="%"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_four"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_five"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <!-- Row 4 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_six"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_multiply"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="*"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_inverse"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="1/x"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridLayout_first"
        android:layout_alignParentBottom="true"
        android:columnCount="5"
        android:alignmentMode="alignMargins"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_one"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="@string/_1"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_two"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="@string/_2"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_three"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="@string/_3"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="@string/minus"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_equals"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:layout_column="4"
            android:text="@string/equal"
            android:textSize="20sp"
            android:textColor="#000000"
            app:backgroundTint="@null"
            android:background="@drawable/calc_button_bg"
            android:layout_margin="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_zero"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="2"
            android:layout_columnSpan="2"
            android:text="@string/zero"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="@string/dot"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_columnWeight="1"
            android:text="@string/plus"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="@drawable/calc_button_bg"
            app:backgroundTint="@null"/>
    </GridLayout>
</RelativeLayout>